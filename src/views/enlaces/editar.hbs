<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{enlace.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{enlace.titulo}}" class="form-control" name="titulo" placeholder="Título" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="url" value="{{enlace.url}}"  name="url" class="form-control"  placeholder="URL">
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" rows="2" class="form-control" placeholder="Descripción">{{enlace.descripcion}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Confirmar cambio
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>